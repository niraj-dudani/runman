	monitor-value 110 Vm
iteration-end

iteration-begin
	synaptic-input 110 stim 0.00 2.5e-10 1e-3 1e-3    # Compartment, stim-file, Ek, gmax, tau1, tau2
	monitor-value 110 Vm
iteration-end

#
# Compartment 382
#
iteration-begin
